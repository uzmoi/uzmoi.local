{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "files": { "ignoreUnknown": true },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "formatter": {
    "indentStyle": "space"
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": false
  },
  "json": {
    "parser": {
      "allowComments": true
    }
  }
}
